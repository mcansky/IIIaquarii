source 'http://rubygems.org'

gem 'rails', '3.0.3'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

group :development do
  gem 'sqlite3-ruby', :require => 'sqlite3'
end
group :production do
  gem 'pg'
  gem 'unicorn'
end

# To use debugger (ruby-debug for Ruby 1.8.7+, ruby-debug19 for Ruby 1.9.2+)
gem 'ruby-debug'
# gem 'ruby-debug19'

# User auth
gem "devise", :git => 'git://github.com/plataformatec/devise.git'

# Rails config files
gem 'rails_config'

# Highlightings
# TODO use github's syntax highligter and pygment wrapper
# ------

# Other
gem 'nifty-generators'

# Git stuff
gem 'grit'

# Versioning
# TODO see if more recent available
gem 'acts_as_versioned', :git => "git://github.com/xspond/acts_as_versioned.git", :branch => "rails3"

# Use jQuery instead of rails default
gem "jquery-rails"

# Friendly ID
gem "friendly_id", "~> 3.2"

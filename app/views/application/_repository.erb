<div class="left_repo grid_6 alpha">
  <div class="repository">
    <h3>
      <% if rep1.is_git? %>
	<span class="kind_git">G</span>
      <% elsif rep1.is_hg? %>
	<span class="kind_hg">H</span>
      <% end %>
      <% if rep1.is_private? %>
        <span class="repo_private" title="<%= t(:repo_private, :scope => :repositories) %>" >P</span>
      <% end %>
      <span class="rep_name"><%= link_to rep1.owner.login + "/" + rep1.name, user_aq_repository_url(rep1.owner, rep1) %></span>
      <span class="rep_actions">
        <% if current_user == rep1.owner %>
          <%= link_to t(:delete, :scope => :repositories), user_aq_repository_url(rep1.owner, rep1), {:method => :delete, :confirm => t(:confirm, :scope => :js), :title => t(:delete, :scope => :repositories) }%>
        <% end %>
      </span>
    </h3>
    <div class="desc">
      <p><%= rep1.desc %></p>
    </div>
  </div>
</div>

<% if rep2 %>
  <div class="right_repo grid_6 omega">
    <div class="repository">
      <h3>
	<% if rep2.is_git? %>
	  <span class="kind_git">G</span>
	<% elsif rep2.is_hg? %>
	  <span class="kind_hg">H</span>
	<% end %>
        <% if rep2.is_private? %>
          <span class="repo_private" title="<%= t(:repo_private, :scope => :repositories) %>" >P</span>
        <% end %>
	<span class="rep_name"><%= link_to rep2.owner.login + "/" + rep2.name, user_aq_repository_url(rep2.owner, rep2) %></span>
        <span class="rep_actions">
          <% if current_user %>
	    <%= link_to t(:delete, :scope => :repositories), user_aq_repository_url(rep2.owner, rep2), {:method => :delete, :confirm => t(:confirm, :scope => :js), :title => t(:delete, :scope => :repositories) }%>
          <% end %>
        </span>
      </h3>
      <div class="desc">
	<p><%= rep2.desc %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="clear"></div>

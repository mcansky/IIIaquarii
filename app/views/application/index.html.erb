<% content_for :head do %>
  <title><%= t(:home, :scope => :application) %> - <%= Settings.application.name %></title>
<% end %>

<%= render :partial => "shared/flash_messages" %>

<!-- Aquarii banner -->
<div class="grid_12" id="aquarii_banner">
  <div id="aq_banner">
    <p>We shall commit this.</p>
  </div>
</div>
<div class="clear"></div>

<div id="introduction">
  <div class="grid_12">
    <div id="text_intro">
      <p><%= Settings.application.index_msg.html_safe %></p>
    </div>
  </div>
  <div class="clear"></div>
</div>

<div id="index_commits_and_repositories">
  <!-- left, commits -->
  <div class="grid_6">
    <div id="commits">
      <h2><%= t(:latest_commits, :scope => :commits) %></h2>
      <% for commit in @commits %>
        <%= render "short_commit", :commit => commit %>
      <% end %>
    </div>
  </div>

  <!-- right, repositories -->
  <div class="grid_6">
    <div id="repositories">
      <h2><%= t(:repositories, :scope => :repositories) %></h2>
      <% @repositories.each do |rep| %>
        <%= render "short_repository", :rep => rep %>
      <% end %>
    </div>
  </div>

  <div class="clear"></div>
</div>


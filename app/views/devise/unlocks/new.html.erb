<% content_for :head do %>
  <title><%= t(:resend, :scope => :unlocks) %> - <%= Settings.application.name %></title>
<% end %>

<div class="grid_4 prefix_4 suffix_4">
  <div id="resend_unlock_form">

    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <p><%= f.label :email %><br />
        <%= f.email_field :email %></p>

      <p class="resend_unlock_form_submit" ><%= f.submit "Resend unlock email" %></p>
    <% end %>

    <%= render :partial => "devise/shared/links" %>

  </div>
</div>
<div class="clear"></div>

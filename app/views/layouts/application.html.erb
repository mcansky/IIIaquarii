<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
  <head profile="http://gmpg.org/xfn/11">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <%= yield :head %>
    <%= stylesheet_link_tag 'reset', 'text', '960', 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <meta name="generator" content="" />
  </head>

  <body>

    <!-- header with logo -->
    <div id="header">
      <div class="container_12">
        <div class="grid_12">
          <%= link_to image_tag("/images/aq3_med2.png", :title => nil, :alt => nil, :border => 0), root_url %>
        </div>
        <div class="clear"></div>
      </div>
    </div>


    <!-- menu with liks to home, user, repos etc. -->
    <div id="menu">

      <div class="container_12">
        <!-- left part -->
        <div class="grid_11 alpha">
          <div id="index_menu_left">
            <%= link_to "Home", root_url, :id => "link_home" %>

            <% if current_user %>
	      <span id="user_stuff">
	        <%= link_to image_tag("/images/icons/user-silhouette.png", :title => t(:home, :scope => :application), :alt => t(:home, :scope => :application), :border => 0) + " #{current_user.login}", current_user %>
	        <%= link_to image_tag("/images/icons/databases.png", :title => t(:label, :scope => :repositories), :alt => t(:label, :scope => :repositories), :border => 0) + " #{t(:label, :scope => :repositories)}", aq_repositories_url %>
	        <%= link_to image_tag("/images/icons/license-key.png", :title => t(:label, :scope => :sshkeys), :alt => t(:label, :scope => :sshkeys), :border => 0) + " #{t(:label, :scope => :sshkeys)}", ssh_keys_url %>
	      </span>
            <% end %>
          </div>
        </div> <!-- /left part -->

        <!-- right part -->
        <div class="grid_1 omega">
          <div id="index_menu_right">
            <% if current_user %>
	      <%= link_to image_tag("/images/icons/wrench.png", :alt => t(:edit, :scope => :users), :title => t(:edit, :scope => :users), :border => 0), edit_user_registration_url %>
	      <%= link_to image_tag("/images/icons/door.png", :alt =>t(:label, :scope => :logout), :title => t(:label, :scope => :logout), :border => 0), destroy_user_session_url %>
            <% else %>
	      <%= link_to image_tag("/images/icons/door.png", :alt => t(:label, :scope => :login), :title => t(:label, :scope => :login)), new_user_session_url %>
	      <%= link_to image_tag("/images/icons/rocket-fly.png", :alt => t(:label, :scope => :signup), :title => t(:label, :scope => :signup), :border => 0), new_user_registration_url %>
            <% end %>
          </div>
        </div> <!-- /right part -->
        <div class="clear"></div>
      </div>
    </div>



    <!-- main -->
    <div id="content">
      <!-- main container -->
      <div class="container_12">
        <%= yield %>
      </div>
    </div>

    <!-- footer -->
    <div id="footer">
      <div class="container_12">
        <div class="grid_12">
          <p>III Aquarii 0.0.1</p>
        </div>
        <div class="clear"></div>
      </div>
    </div>

  </body>
</html>

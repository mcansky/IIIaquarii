<% content_for :head do %>
  <title><%= @user.login %><%= t(:user_show_profile, :scope => :users) %> - <%= Settings.application.name %></title>
<% end %>

<div id="user">

  <div class="user_desc">
    <h2><%= image_tag("/images/icons/user-silhouette.png", :title => nil, :alt => nil, :border => 0) %> <%= @user.login %></h2>

    <p>
      <% if @user.name != @user.login %>
        <strong><%= t(:name, :scope => :users) %></strong> <%= @user.name %>
        <br>
      <% end %>
      <strong><%= t(:email, :scope => :users) %></strong> <%= mail_to @user.email, nil, :encode => "hex", :replace_dot => " dot ", :replace_at => " at " %>
    </p>
  </div>

  <div class="user_repositories">
    <h2><%= t(:label, :scope => :repositories) %></h2>
    <% @user.aq_repositories.first(10).each_slice(2) do |rep1,rep2| %>
      <%= render "application/short_repositories", :rep1 => rep1, :rep2 => rep2 %>
    <% end %>
</div>

<div class="user_commits">
  <h2>Latest commits</h2>
  <% for commit in @user.aq_commits.first(10) %>
    <%= render "application/short_commit", :commit => commit %>
  <% end %>
</div>
<div class="clear"></div>

</div>

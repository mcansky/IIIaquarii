<% content_for :head do %>
  <title><%= t(:label, :scope => [:admin, :users, :show]) %> - <%= Settings.application.name %></title>
<% end %>

<%= render :partial => "shared/flash_messages" %>

<div class="grid_12">
  <h2><%= t(:label, :scope => [:admin, :users, :show]) %> <%= @user.login %></h2>
  <ul>
    <li><%= t(:id ,:scope => [:admin, :users, :show]) %> <%= @user.id %></li>
    <li><%= t(:login ,:scope => [:admin, :users, :show]) %> <%= @user.login %></li>
    <li><%= t(:name ,:scope => [:admin, :users, :show]) %> <%= @user.name %></li>
    <li><%= t(:email ,:scope => [:admin, :users, :show]) %> <%= @user.email %></li>
    <li><%= t(:remember_created_at ,:scope => [:admin, :users, :show]) %> <%= @user.remember_created_at %></li>
    <li><%= t(:sign_in_count ,:scope => [:admin, :users, :show]) %> <%= @user.sign_in_count %></li>
    <li><%= t(:current_sign_in_at ,:scope => [:admin, :users, :show]) %> <%= @user.current_sign_in_at %></li>
    <li><%= t(:last_sign_in_at ,:scope => [:admin, :users, :show]) %> <%= @user.last_sign_in_at %></li>
    <li><%= t(:current_sign_in_ip ,:scope => [:admin, :users, :show]) %> <%= @user.current_sign_in_ip %></li>
    <li><%= t(:last_sign_in_ip ,:scope => [:admin, :users, :show]) %> <%= @user.last_sign_in_ip %></li>
    <li><%= t(:confirmed_at ,:scope => [:admin, :users, :show]) %> <%= @user.confirmed_at %></li>
    <li><%= t(:confirmation_sent_at ,:scope => [:admin, :users, :show]) %> <%= @user.confirmation_sent_at %></li>
    <li><%= t(:failed_attempts ,:scope => [:admin, :users, :show]) %> <%= @user.failed_attempts %></li>
    <li><%= t(:locked_at ,:scope => [:admin, :users, :show]) %> <%= @user.locked_at %></li>
    <li><%= t(:created_at ,:scope => [:admin, :users, :show]) %> <%= @user.created_at %></li>
    <li><%= t(:updated_at ,:scope => [:admin, :users, :show]) %> <%= @user.updated_at %></li>
  </ul>
  <br>
  <%= link_to t(:back, :scope => :links), "javascript:history.back()" %>
</div>
<div class="clear"></div>

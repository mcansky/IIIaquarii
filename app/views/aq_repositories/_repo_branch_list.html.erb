<div class="branches">
  <p><strong><%= t(:branches, :scope => :repositories) %> </strong>
    <% if @repository.branches.empty? %>
      <%= t(:no_branches, :scope => :repositories) %>
    <% end %>
    <% @repository.branches.each do |br| %>
      <%= link_to br.name, :action => "show", :branch => br.name %>
    <% end %>
  </p>
  <p><strong><%= link_to t(:commits, :scope => :repositories), "/aq_repositories/commits/#{@repository.id}" %> <%= @repository.commits.count %></strong></p>
</div>

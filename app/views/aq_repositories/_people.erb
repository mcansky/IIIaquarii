<div class="people">
  <% for right in @repository.rights %>
    <div class="committer">
      <h4>
        <% if right.user == @repository.owner %>
          <%= image_tag("/images/icons/user-worker-boss.png", :title => t(:owner, :scope => :repositories), :alt => t(:owner, :scope => :repositories), :border => 0) %>
          <%= link_to right.user.login, right.user, :title => t(:owner, :scope => :repositories) %>
        <% elsif @repository.committers.include?(right.user) %>
          <%= image_tag("/images/icons/user-worker.png", :title => t(:committer, :scope => :repositories), :alt => t(:committer, :scope => :repositories), :border => 0) %>
          <%= link_to right.user.login, right.user, :title => t(:committer, :scope => :repositories) %>
        <% end %>
      </h4>
    </div>
  <% end %>
</div>

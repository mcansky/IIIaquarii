<% form_for repository do |f| %>
  <%= f.error_messages %>
  <p><%= f.label :name %> : <%= f.text_field :name %></p>
  <p><%= f.label :repo_kind %> : <%= f.select :kind, ["git"] %></p>
  <p><%= f.label :desc %> : <br /><%= f.text_area :desc, :rows => 5, :cols => 32 %></p>
  <p><%= f.label :visibility %> : <%= f.check_box :visibility %></p>
  <p><%= f.submit t(:submit, :scope => :links) %></p>
<% end %>

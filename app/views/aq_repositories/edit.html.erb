<% content_for :head do %>
  <title>
    <%= t(:edit, :scope => :repositories) %> - <%= Settings.application.name %>
  </title>
<% end %>

<div class="grid_4 prefix_4 suffix_4">
  <div id="repository_form">
    <h1><%= @repository.name %></h1>

    <%= render "form", :repository => @repository %>

    <p class="repository_form_button"><%= button_to t(:delete, :scope => :links), [@repository.owner, @repository], :confirm => t(:confirm, :scope => :js), :method => :delete %></p>
    </div>
</div>
<div class="clear"></div>
